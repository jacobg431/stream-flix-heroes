{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "windows",
      "type": "shell",
      "command": "${env:MinGW64_PATH}",
      "args": [
        "-c",
        "rm -rf out && cmake -S . -B out && cmake --build out"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "unix",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "rm -rf out && cmake -S . -B out && cmake --build out"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}
